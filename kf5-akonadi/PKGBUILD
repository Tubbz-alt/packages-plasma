# Maintainer : Philip MÃ¼ller <philm@manjaro.org>

pkgname=kf5-akonadi
_pkgname=akonadi
pkgver=1.79.2
pkgrel=1
arch=('i686' 'x86_64')
url='http://community.kde.org/KDE_PIM/Akonadi'
pkgdesc="PIM layer, which provides an asynchronous API to access all kind of PIM data"
license=('LGPL')
depends=('shared-mime-info' 'boost-libs' 'sqlite' 'qt5-base' 'libxslt')
makedepends=('cmake' 'boost' 'postgresql' 'mariadb' 'git')
optdepends=('postgresql: PostgreSQL backend'
            'mariadb: MySQL backend')
conflicts=("$_pkgname")
install=akonadi.install
#source=("http://download.kde.org/stable/akonadi/src/akonadi-${pkgver}.tar.bz2")
source=("git://anongit.kde.org/akonadi")
md5sums=('SKIP')

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DINSTALL_QSQLITE_IN_QT_PREFIX=TRUE \
    -DAKONADI_BUILD_TESTS=OFF \
    -DQT5_BUILD=ON \
    -DDATABASE_BACKEND=SQLITE \
    -DWITH_SOPRANO=OFF
  make
}

package() {
  cd build
  
  make DESTDIR="${pkgdir}" install
}
