# Maintainer : Philip MÃ¼ller <philm@manjaro.org>

pkgname=kf5-okular
pkgver=4.14.0
pkgrel=1
pkgdesc='Universal document viewer'
arch=('i686' 'x86_64')
url='http://kde.org/applications/graphics/okular/'
license=('GPL')
depends=('kpty' 'kdelibs4support' 'threadweaver' 'kactivities-frameworks' 
         'khtml' 'chmlib' 'djvulibre' 'libspectre' 'poppler-qt5' 'libkscreen2')
makedepends=('extra-cmake-modules' 'git' 'kdoctools')
conflicts=('kdegraphics-okular')
provides=('kdegraphics-okular')
source=("git://anongit.kde.org/okular.git#branch=frameworks")
sha256sums=('SKIP')

pkgver() {
  cd okular
  git describe --long | sed -e 's|-|.|g' | sed -e 's|v||g'
}

prepare() {
  mkdir -p build
}

build() { 
  cd build
  cmake ../okular \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    -DLIB_INSTALL_DIR=lib \
    -DQT_PLUGIN_INSTALL_DIR=lib/qt/plugins
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
