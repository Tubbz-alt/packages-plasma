# Maintainer : Philip MÃ¼ller <philm@manjaro.org>

pkgname=kf5-kdepimlibs
_pkgname=kdepimlibs
pkgver=4.98.0.3
pkgrel=1
arch=('i686' 'x86_64')
pkgdesc="KDE Pim Libraries"
url="http://www.kde.org"
license=('GPL' 'LGPL' 'FDL')
install=kdepimlibs.install
#options=('docs' 'debug')
depends=('kf5-akonadi' 'libical' 'gpgme' 'prison-qt5' 'libdmtx' 'qrencode' 'qjson-qt5' 'kcmutils'
         'kdelibs4support' 'kemoticons' 'kidletime' 'kinit' 'kitemmodels' 'qt5-tools')
makedepends=('pkg-config' 'extra-cmake-modules' 'boost' 'cyrus-sasl' 'openldap' 'docbook-xsl'
             'kdoctools' 'kf5-libkgapi' 'git')
conflicts=($_pkgname)
source=("git://anongit.kde.org/kdepimlibs.git")      
md5sums=('SKIP')

build() {
	cd ${srcdir}
	mkdir -p build
	cd build

	cmake ../${_pkgname} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_SKIP_RPATH=ON \
		-DLIB_INSTALL_DIR=lib  
                #-DKDEPIMLIBS_SUPERBUILD=TRUE 
                
	make # -j8 sb_all
}

package() {
	cd ${srcdir}/build
	
	make DESTDIR=${pkgdir} install
}
