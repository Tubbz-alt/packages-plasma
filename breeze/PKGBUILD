# Contributor: Antonio Rojas

pkgname=breeze
pkgver=5.0.95
pkgrel=1
pkgdesc='Artwork, styles and assets for the Breeze visual style for the Plasma Desktop'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/workspace/breeze'
license=('LGPL')
depends=('kcoreaddons' 'kconfig' 'frameworkintegration')
makedepends=('extra-cmake-modules')
optdepends=('qtcurve-qt5: Breeze widget style' 'qtcurve-kde4: Breeze widget style for KDE4 applications' 
'oxygen-icons: fallback icon theme')
source=("http://download.kde.org/unstable/plasma/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('a3df7b76cdc9901619a625a19a4f629889d625411eed84ad77ce8d5eaf203c24')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DQML_INSTALL_DIR=lib/qt/qml \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install

# make QtCurve preset and color scheme available for KDE4 too
  install -d -m755 "$pkgdir"/usr/share/apps/{QtCurve,color-schemes}
  ln -sr "$pkgdir"/usr/share/QtCurve/Breeze.qtcurve "$pkgdir"/usr/share/apps/QtCurve
  ln -sr "$pkgdir"/usr/share/color-schemes/Breeze.colors "$pkgdir"/usr/share/apps/color-schemes
}