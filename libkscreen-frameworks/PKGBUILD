# Maintainer : Philip MÃ¼ller <philm@manjaro.org>
# Contributor: Antonio Rojas

pkgname=libkscreen-frameworks
pkgver=5.0.95
pkgrel=3
pkgdesc='KDE screen management software'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/extragear/libs/libkscreen'
license=('LGPL')
depends=('qt5-x11extras' 'libxrandr')
conflicts=('libkscreen2')
provides=('libkscreen2')
replaces=('libkscreen2')
makedepends=('extra-cmake-modules')
source=("http://download.kde.org/unstable/plasma/$pkgver/libkscreen-$pkgver.tar.xz")
sha256sums=('58f0bacf6f2659a9557b2d7c281d0eb4f01cb3a9a6ed488b1ed642be90b62cc9')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../libkscreen-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
