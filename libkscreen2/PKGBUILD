# Maintainer : Philip MÃ¼ller <philm@manjaro.org>

pkgname=libkscreen2
_pkgname=libkscreen
pkgver=5.0.92
_pkgver=5.0.1
pkgrel=1
pkgdesc="A library for extracting file metadata"
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/kdelibs/kfilemetadata'
license=('LGPL')
depends=('qt5-x11extras')
makedepends=('extra-cmake-modules' 'xorg-xrandr')
source=("http://download.kde.org/stable/plasma/$_pkgver/${_pkgname}-$pkgver.tar.xz")
md5sums=('a98fba8e13a9264fc5792957ad563fe8')

build() {
  mkdir -p build
  cd build
  
  cmake ../${_pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DECM_MKSPECS_INSTALL_DIR=/usr/lib/qt5/mkspecs/modules \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DLIB_INSTALL_DIR=lib
  make
}

package() {
  cd build

  make DESTDIR="${pkgdir}" install
}
