pkgname=plasma-workspace
pkgver=5.0.1
pkgrel=1
pkgdesc='Provides the interface and basic tools for the KDE Plasma Workspace'
arch=('i686' 'x86_64')
url='https://projects.kde.org/projects/kde/workspace/plasma-workspace'
license=('LGPL')
depends=('frameworkintegration' 'kcmutils' 'knotifyconfig' 'krunner' 'kdesu' 'knewstuff' 'khtml'
         'libdbusmenu-qt5' 'glu' 'kjsembed' 'libxkbfile' 'libxcursor' 'lm_sensors' 'libraw1394'
         'libusb-compat' 'pciutils' 'libbsd' 'kf5-akonadi' 'qt5-webkit' 'attica-qt5'
         'kemoticons' 'libxrandr' 'kded' 'kwin' 'libksysguard' 'ktexteditor' 'kde-cli-tools'
         'khelpcenter' 'kio-extras' 'milou' 'libkscreen2' 'breeze' 'gpsd' 'libqalculate' 'qt5-tools'
         'qimageblitz-qt5' 'oxygen-icons' 'prison-qt5' 'kf5-kdepimlibs')
makedepends=('extra-cmake-modules' 'kdoctools' 'boost')
groups=('plasma')
source=("http://download.kde.org/stable/plasma/${pkgver}/${pkgname}-${pkgver}.tar.xz"
        '10-kf5')
md5sums=('4f7827caa9251ee7662e4099e273ae795c0c16ece4c6e017ce5627be99f72bba'
         '12c7e7c51e2a55b280504ce8f436d52dcd7a8811722912349ea8e62ab2b1011f')

build() {
  mkdir -p build
  #sed -i 's|find_package(KdepimLibs 4.70.10 QUIET CONFIG)|find_package(KdepimLibs)|' ${srcdir}/$pkgname/CMakeLists.txt
  #sed -e "s/PO_FILES //" -i ${srcdir}/$pkgname-$pkgver/po/*/CMakeLists.txt
  cd build
  
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DSYSCONF_INSTALL_DIR=/etc \
    -DQML_INSTALL_DIR=/usr/lib/qt5/qml \
    -DPLUGIN_INSTALL_DIR=/usr/lib/qt5/plugins \
    -DBUILD_TESTING=OFF 
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
  
  sed 's|qtpaths|qtpaths-qt5|' -i "$pkgdir/usr/bin/startkde"
  
  install -Dm755 "${srcdir}/10-kf5" "${pkgdir}/etc/X11/xinit/xinitrc.d/10-kf5"
}
